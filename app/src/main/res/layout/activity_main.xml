<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.example.duaa.sportier.Activity.MainActivity"
    android:orientation="vertical">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/ad01"
    android:layout_gravity="center"
    android:id="@+id/imageMain"
    android:layout_weight="1"

    />


    <com.example.duaa.sportier.view.FontButtonRegular
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/english"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/btn01_black"
        android:text="@string/englishLanguage"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/white"

        />

    <com.example.duaa.sportier.view.FontButtonRegular
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/arabic"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/btn01_red"
        android:text="@string/arabicLanguage"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:textAllCaps="false" />

    </LinearLayout>
